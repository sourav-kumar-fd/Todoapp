<h1>list all Todos </h1>
<%= link_to "create a new todo", new_todo_path(@todo) %>
<table>
  <tr>
  	<th>Name</th>
  	<th>Description</th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
    	<td><%= todo.name %></td>
    	<td><%= todo.description %></td>
    	<td><%= link_to "Edit", edit_todo_url(todo) %></td>
    	<td><%= link_to "show", todo_url(todo) %></td>
    	<td><%= link_to "Delete", todo_url(todo), method: :delete, data: {confirm: "are you sure?"} %></td>
    </tr>
  <% end %>

</table>
